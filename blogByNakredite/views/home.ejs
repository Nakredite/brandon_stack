<%- include("partials/header"); -%>

<h1>Home</h1>
<p><%= startingContent %></p>

<% if (posts && posts.length > 0) { %>
  <% posts.forEach(function (post) { %>
    <h1><%= post.title %></h1>
    <p>
      <% if (post.content) { %>
        <%= post.content.substring(0, 100) + " ..." %>
      <% } else { %>
        No content available.
      <% } %>
      <a href="/posts/<%= post._id %>">Read More</a>
    </p>
  <% }) %>
<% } else { %>
  <p>No posts available.</p>
<% } %>

<%- include("partials/footer"); -%>
